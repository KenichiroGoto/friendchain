<div class="container">
  <div class="row">
    <div class="wrapper col-md-5 col-md-offset-3 col-sm-10">
      <h4>新規トピック作成</h4>

      <%= form_for(@topic) do |f| %>

        <%= f.error_messages! %>

        <%= f.label :content %>
        <%= f.text_area :content, :size => "20x3", class: 'form-control' %>

        <%= f.label :picture %>
        <%= picture_img(@topic) if @topic.picture?%>
        <%= f.file_field :picture %>
        <%= f.hidden_field :picture_cache %>

        <%= f.submit "投稿" %>
      <% end %>

      <%= link_to "トピック一覧へ戻る", topics_path %>

    </div>
  </div>
</div>
