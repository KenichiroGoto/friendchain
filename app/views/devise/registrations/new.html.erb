<div class="devise_content">

<div class="container">
  <div class="row">
    <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">

      <h3>サインアップ</h3>

      <%= alert %>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="top_reg_field">
          <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "名前" %>
        </div>

        <div class="top_reg_field">
          <%= f.email_field :email, autofocus: false, class: "form-control", placeholder: "メールアドレス" %>
        </div>

        <div class="top_reg_field">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード(#{@minimum_password_length.to_s}文字以上)" %>
        </div>

        <div class="top_reg_field">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード再入力" %>
        </div>

        <div class="actions">
          <%= f.submit "アカウント登録", id: "account_reg_button" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>

</div>
