<div class="devise_content">

<div class="container">
  <div class="row">
    <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">

    <h3>編集 <%= resource_name.to_s.humanize %></h3>

    <%= alert %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.text_field :name, autofocus: true, autocomplete: "on", class: "form-control", placeholder: "名前" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: false, autocomplete: "on", class: "form-control" %>
      </div>

      <!-- Not show the password forms when users log in through SNS Login. -->
      <% if @user.provider.blank? %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>現在確認待ち: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password %> <i>(変更しない場合は空欄のまま)</i><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "(#{@minimum_password_length}文字以上)" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "(変更後パスワード再入力)" %></br>
        </div>

        <div class="field">
          <%= f.label :current_password %><br />
          <%= f.password_field :current_password, autocomplete: "off", class: "form-control", placeholder: "(確認の為、現在のパスワードを入力)" %></br>
        </div>

      <% end %>

      <!-- <div class="field">
        <div class="photo_avatar">
          <%= profile_img(@user) if profile_img(@user) %>
        </div>
        <%= f.file_field :avatar %>
        <%= f.hidden_field :avatar_cache %>
      </div> -->

      <div class="actions">
        <%= f.submit "更新", class: "btn btn-primary btn-block" %></br>
      </div>
    <% end %>

    <p>アカウント削除</p>
    <p><%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に宜しいですか?" }, method: :delete, class: "btn btn-primary btn-block" %></p>

    <%= link_to "戻る", :back %>

    </div>
  </div>
</div>

</div>
