<!DOCTYPE html>
<html>
<head>
  <title>Friendchain</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">

</head>

<% unless current_page?(root_path) %>
<body <%= "class=body_login" %> >
<% end %>


  <header>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <!-- change logo belongs to login/logoff -->
          <% if user_signed_in? %>
            "<div class="logo_container_login" >"
            <%= link_to image_tag('logo_login.png'), topics_path %>
            </div>
          <% else %>
            <div class="logo_container_logoff" >
            <%= link_to image_tag('logo_logoff.png'), root_path %>
            </div>
          <% end %>

        </div>

        <% if user_signed_in? %>
          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'トピック一覧', topics_path %></li>
                </ul>
              </li>
            </ul>
          </div><!-- /.navbar-collapse -->
        <% else %>
          <div class="login_form_box", id="login_form_box">
            <!-- login form in the navbar -->
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field", id="login_form_email">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true %>
              </div>

              <div class="field", id="login_form_pwd">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "off" %>
                  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
                  <% end -%>
              </div>

              <div class="actions">
                <%= f.submit "Log in", class: 'btn btn-primary btn-block', id: 'login_btn'%>
              </div>
            <% end %>

          </div>
        <% end %>
      </div><!-- /.container-fluid -->
    </nav>

  </header>


<%= yield %>

  <footer>
    <p>friendchain</p>
  </footer>

</body>
</html>
