<div class="container">
  <div class="row">
    <div class="wrapper col-md-5 col-md-offset-3 col-sm-10">
      <h4>ユーザー一覧</h4>
      <% @users.each do |user| %>
        <% unless user == current_user %>
          <div class="user_index_area">
            <div class="user_index_profile_image" >
              <%= profile_img(user) %>
            </div>
            <div class="user_index_name">
              <%= link_to "#{user.name}", user_path(user)  %>
            </div>
            <div class="user_index_btn_box">
              <div class="user_index_message_button">
                <%= link_to "メッセージ", conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post', class: "btn btn-primary btn-block", id: "user_index_message_btn" %>
              </div>
              <div class="user_index_follow_form">
                <%= render partial: 'follow_form', locals: {user: user} %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
